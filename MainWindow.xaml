<Window x:Class="TextBoxTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextBoxTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid Name="bigGrid">
        <TextBox Margin="143,22,143,208" Background="Beige">ttt</TextBox>
        <Button Margin="143,202,143,58" Click="Button_Click">AA</Button>
        <local:RegExpTextBox x:Name="myLilRegExTextBox" Margin="143,134,143,150" Background="Orange" RegEx="^[a,s]$" 
                              Foreground="black" WrongBackgroundColor="#FF167FB0" >at</local:RegExpTextBox>
    </Grid>
</Window>
